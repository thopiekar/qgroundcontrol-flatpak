{
    "app-id": "org.mavlink.qgroundcontrol",
    "runtime" : "org.kde.Platform",
    "runtime-version" : "5.12",
    "sdk" : "org.kde.Sdk",
    "sdk-extensions" : [
    ],
    "command": "QGroundControl",
    "rename-desktop-file": "qgroundcontrol.desktop",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=home",
        "--device=dri",
        "--socket=pulseaudio"
    ],
    "modules": [
        {
            "name": "qgroundcontrol",
            "buildsystem": "cmake",
            "builddir": true,
            "ccache": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DENABLE_INSTALL_TARGET:BOOL=ON"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/thopiekar/qgroundcontrol.git",
                    "branch": "feature/cmake-fixes"
                }
            ]
        }
    ]
}

